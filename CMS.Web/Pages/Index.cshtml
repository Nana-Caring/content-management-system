@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">@Model.WelcomeMessage</h1>
                    <p class="text-muted">Here's what's happening with your platform today.</p>
                </div>
                <div>
                    <span class="badge bg-success me-2">✓ System Online</span>
                    <button class="btn btn-primary btn-sm" onclick="window.location.reload()">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-4 border-primary shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Users</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Stats.TotalUsers.ToString("N0")</div>
                            @if (Model.Stats.NewUsersToday > 0)
                            {
                                <small class="text-success">+@Model.Stats.NewUsersToday new today</small>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people fa-2x text-muted"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-primary stretched-link" asp-page="/Users/Index">View Details</a>
                    <div class="small text-primary"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-4 border-success shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">Total Accounts</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Stats.TotalAccounts.ToString("N0")</div>
                            @if (Model.Stats.TotalBalance > 0)
                            {
                                <small class="text-muted">Balance: @Model.Stats.TotalBalance.ToString("C")</small>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-wallet2 fa-2x text-muted"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-success stretched-link" asp-page="/Accounts/Index">View Details</a>
                    <div class="small text-success"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-4 border-warning shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-warning text-uppercase mb-1">Total Transactions</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Stats.TotalTransactions.ToString("N0")</div>
                            @if (Model.Stats.TodayTransactionAmount > 0)
                            {
                                <small class="text-info">Today: @Model.Stats.TodayTransactionAmount.ToString("C")</small>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-left-right fa-2x text-muted"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-warning stretched-link" asp-page="/Transactions/Index">View Details</a>
                    <div class="small text-warning"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start border-4 border-info shadow h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">Pending KYC</div>
                            <div class="h5 mb-0 fw-bold text-gray-800">@Model.Stats.PendingKycRequests</div>
                            @if (Model.Stats.ActiveUsers > 0)
                            {
                                <small class="text-success">@Model.Stats.ActiveUsers active users</small>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-shield-check fa-2x text-muted"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-info stretched-link" asp-page="/KYC/Index">View Details</a>
                    <div class="small text-info"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a asp-page="/Users/Index" class="btn btn-outline-primary w-100">
                                <i class="bi bi-people d-block mb-1"></i>
                                <small>Manage Users</small>
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a asp-page="/Accounts/Index" class="btn btn-outline-success w-100">
                                <i class="bi bi-wallet2 d-block mb-1"></i>
                                <small>View Accounts</small>
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a asp-page="/Transactions/Index" class="btn btn-outline-info w-100">
                                <i class="bi bi-arrow-left-right d-block mb-1"></i>
                                <small>Transactions</small>
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a asp-page="/Products/Index" class="btn btn-outline-warning w-100">
                                <i class="bi bi-box-seam d-block mb-1"></i>
                                <small>Products</small>
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a asp-page="/KYC/Index" class="btn btn-outline-danger w-100">
                                <i class="bi bi-shield-check d-block mb-1"></i>
                                <small>KYC Requests</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User State Debug Info (Development Only) -->
    @if (ViewContext.HttpContext.RequestServices.GetService<IWebHostEnvironment>()?.IsDevelopment() == true)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-secondary">State Management Debug Info</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Current User State:</h6>
                                <pre class="text-small">@System.Text.Json.JsonSerializer.Serialize(Model.CurrentUser, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase, WriteIndented = true })</pre>
                            </div>
                            <div class="col-md-6">
                                <h6>Navigation State:</h6>
                                <pre class="text-small">@System.Text.Json.JsonSerializer.Serialize(Model.Navigation, new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase, WriteIndented = true })</pre>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-sm btn-outline-secondary" onclick="cms.state.debug()">
                                Debug Client State
                            </button>
                            <button class="btn btn-sm btn-outline-secondary" onclick="cms.setLoading(true, 'Testing loading state...'); setTimeout(() => cms.setLoading(false), 2000)">
                                Test Loading
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }
    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }
    .text-xs {
        font-size: .75rem;
    }
    .font-weight-bold {
        font-weight: 700;
    }
    .text-gray-800 {
        color: #5a5c69;
    }
    .text-gray-300 {
        color: #dddfeb;
    }
    pre {
        font-size: 0.8rem;
        max-height: 200px;
        overflow-y: auto;
    }
</style>
