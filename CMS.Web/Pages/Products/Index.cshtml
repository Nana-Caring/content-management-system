<script>
document.addEventListener('DOMContentLoaded', function() {
    const deleteModal = document.getElementById('deleteModal');
    if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            const productId = button.getAttribute('data-product-id');
            const productName = button.getAttribute('data-product-name');
            
            document.getElementById('productName').textContent = productName;
            document.getElementById('deleteId').value = productId;
        });
    }
    // Edit button logic: fetch details and open modal
    document.querySelectorAll('.js-edit-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
            const id = btn.getAttribute('data-product-id');
            try {
                const res = await fetch(`?handler=ProductJson&id=${id}`);
                if (!res.ok) throw new Error('Failed to load product');
                const json = await res.json();
                if (!json.success) throw new Error(json.message || 'Failed to load product');
                const p = json.data;
                // Fill form
                document.getElementById('editId').value = p.id;
                document.getElementById('editName').value = p.name || '';
                document.getElementById('editBrand').value = p.brand || '';
                document.getElementById('editPrice').value = p.price || '';
                document.getElementById('editCategory').value = p.category || '';
                document.getElementById('editSku').value = p.sku || '';
                document.getElementById('editDescription').value = p.description || '';
                document.getElementById('editDetailedDescription').value = p.detailedDescription || '';
                document.getElementById('editImage').value = p.image || '';
                document.getElementById('editImagesText').value = (p.images && p.images.length) ? p.images.join('\n') : '';
                document.getElementById('editInStock').checked = !!p.inStock;
                document.getElementById('editStockQuantity').value = p.stockQuantity ?? 0;
                document.getElementById('editIsActive').checked = p.isActive !== false;
                document.getElementById('editTagsText').value = (p.tags && p.tags.length) ? p.tags.join(', ') : '';
                document.getElementById('editMinAge').value = p.minAge ?? '';
                document.getElementById('editMaxAge').value = p.maxAge ?? '';
                document.getElementById('editAgeCategory').value = p.ageCategory || 'All Ages';
                document.getElementById('editRequireAge').checked = !!p.requiresAgeVerification;

                const editModal = new bootstrap.Modal(document.getElementById('editModal'));
                editModal.show();
            } catch (e) {
                console.error(e);
                alert('Failed to load product details');
            }
        });
    });

    // Scroll to Top functionality
    const scrollToTopBtn = document.getElementById('scrollToTop');
    const scrollableContainer = document.querySelector('.scrollable-table-container');
    
    if (scrollableContainer && scrollToTopBtn) {
        scrollableContainer.addEventListener('scroll', function() {
            if (scrollableContainer.scrollTop > 300) {
                scrollToTopBtn.classList.add('show');
            } else {
                scrollToTopBtn.classList.remove('show');
            }
        });
    }
});

function scrollToTop() {
    const scrollableContainer = document.querySelector('.scrollable-table-container');
    if (scrollableContainer) {
        scrollableContainer.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }
}

// Enhanced Product Update with Modal Feedback
document.addEventListener('DOMContentLoaded', function() {
    const editForm = document.getElementById('editForm');
    if (editForm) {
        editForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Show loading modal
            let loadingModal = null;
            if (typeof Modal !== 'undefined' && Modal.showLoading) {
                loadingModal = Modal.showLoading('Updating product...', 'Please wait while we save your changes.');
            } else {
                console.log('Updating product...');
            }
            
            try {
                const formData = new FormData(editForm);
                const productName = formData.get('name') || 'Product';
                const productId = formData.get('id');
                
                // Debug: Log form data being sent
                console.log('üì§ Submitting product update:');
                console.log('- Product ID:', productId);
                console.log('- Product Name:', productName);
                console.log('- Form Action:', editForm.action);
                for (let [key, value] of formData.entries()) {
                    console.log(`- ${key}:`, value);
                }
                
                const response = await fetch(editForm.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });
                
                if (typeof Modal !== 'undefined' && Modal.hide) {
                    Modal.hide();
                }
                
                if (response.ok) {
                    const result = await response.json();
                    
                    // Debug: Log server response
                    console.log('üì• Server Response:', result);
                    
                    if (result.success) {
                        console.log('‚úÖ Update successful, received data:', result.data);
                        
                        // Close edit modal first
                        const editModal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                        if (editModal) {
                            editModal.hide();
                        }
                        
                        // Update the UI immediately with the returned data
                        updateProductInTable(result.data);
                        
                        // Show success modal
                        if (typeof Modal !== 'undefined') {
                            Modal.showSuccess(
                                'Product Updated Successfully!',
                                `"${productName}" has been updated successfully and changes are now live in the table below!`
                            );
                        }
                        
                        // Remove the automatic refresh since we're updating the table directly
                        console.log('üéØ Product update complete - no page refresh needed');
                        
                    } else {
                        console.error('‚ùå Update failed:', result.message);
                        if (typeof Modal !== 'undefined') {
                            Modal.showError(
                                'Update Failed',
                                result.message || 'Failed to update product. Please try again.'
                            );
                        }
                    }
                } else {
                    const errorText = await response.text();
                    console.error('‚ùå Server error response:', {
                        status: response.status,
                        statusText: response.statusText,
                        responseText: errorText
                    });
                    if (typeof Modal !== 'undefined') {
                        Modal.showError(
                            'Server Error',
                            `Failed to update product. Server error: ${response.status}. Please check the console for details.`
                        );
                    }
                }
            } catch (error) {
                if (typeof Modal !== 'undefined' && Modal.hide) {
                    Modal.hide();
                }
                console.error('Update error:', error);
                if (typeof Modal !== 'undefined') {
                    Modal.showError(
                        'Network Error',
                        'A network error occurred while updating the product. Please check your connection and try again.'
                    );
                }
            }
        });
    }
    
    // Enhanced Delete Confirmation with Modal
    const deleteButtons = document.querySelectorAll('.js-delete-btn');
    deleteButtons.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            
            const productId = this.getAttribute('data-product-id');
            const productName = this.getAttribute('data-product-name') || 'this product';
            
            if (typeof Modal !== 'undefined' && Modal.showConfirm) {
                Modal.showConfirm(
                    'Delete Product',
                    `Are you sure you want to delete "${productName}"? This action cannot be undone.`,
                    async () => {
                let loadingModal = null;
                if (typeof Modal !== 'undefined' && Modal.showLoading) {
                    loadingModal = Modal.showLoading('Deleting product...', 'Please wait while we remove this product.');
                } else {
                    console.log('Deleting product...');
                }
                
                try {
                    const deleteForm = document.getElementById('deleteForm');
                    document.getElementById('deleteId').value = productId;
                    
                    const formData = new FormData(deleteForm);
                    
                    const response = await fetch(deleteForm.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'Accept': 'application/json'
                        }
                    });
                    
                    if (typeof Modal !== 'undefined' && Modal.hide) {
                        Modal.hide();
                    }
                    
                    if (response.ok) {
                        Modal.showSuccess('Product Deleted', `"${productName}" has been deleted successfully.`);
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        Modal.showError('Delete Failed', 'Failed to delete the product. Please try again.');
                    }
                } catch (error) {
                    if (typeof Modal !== 'undefined' && Modal.hide) {
                        Modal.hide();
                    }
                    console.error('Delete error:', error);
                    if (typeof Modal !== 'undefined') {
                        Modal.showError(
                            'Delete Failed',
                            'A network error occurred while deleting the product. Please check your connection and try again.'
                        );
                    }
                }
            }); // End of confirm modal callback
            } else {
                // Fallback if Modal is not available
                if (confirm(`Are you sure you want to delete "${productName}"? This action cannot be undone.`)) {
                    // Simple delete without modal loading - wrapped in async function
                    (async () => {
                        try {
                            const deleteForm = document.getElementById('deleteForm');
                            document.getElementById('deleteId').value = productId;
                            const formData = new FormData(deleteForm);
                            
                            const response = await fetch(deleteForm.action, {
                                method: 'POST',
                                body: formData,
                                headers: { 'Accept': 'application/json' }
                            });
                            
                            if (response.ok) {
                                alert(`"${productName}" has been deleted successfully.`);
                                window.location.reload();
                            } else {
                                alert('Failed to delete the product. Please try again.');
                            }
                        } catch (error) {
                            console.error('Delete error:', error);
                            alert('A network error occurred while deleting the product.');
                        }
                    })();
                }
            }
        });
    });

    // Enhanced Function to update product data in the table without page reload
    function updateProductInTable(productData) {
        console.log('üîÑ Updating product in table:', productData);
        
        if (!productData || !productData.id) {
            console.warn('‚ùå Invalid product data provided for table update');
            return;
        }

        // Find the table row for this product
        const productRow = document.querySelector(`tr[data-product-id="${productData.id}"]`);
        if (!productRow) {
            console.warn(`‚ùå Product row not found for ID: ${productData.id}`);
            console.log('Available rows:', document.querySelectorAll('tr[data-product-id]'));
            return;
        }

        console.log('‚úÖ Found product row for ID:', productData.id);

        try {
            // Update the product name in the table
            const nameCell = productRow.querySelector('.product-name');
            if (nameCell && productData.name) {
                nameCell.textContent = productData.name;
                nameCell.setAttribute('title', productData.name);
                console.log('‚úÖ Updated product name to:', productData.name);
            }

            // Update the description in the table
            const descriptionCell = productRow.querySelector('.product-description');
            if (descriptionCell && productData.description) {
                const truncatedDesc = productData.description.length > 100 
                    ? productData.description.substring(0, 100) + '...' 
                    : productData.description;
                
                // Handle both div and span elements
                if (descriptionCell.tagName === 'DIV') {
                    descriptionCell.textContent = truncatedDesc;
                } else {
                    // If it's a "No description" span, replace it with div
                    const newDescDiv = document.createElement('div');
                    newDescDiv.className = 'product-description';
                    newDescDiv.textContent = truncatedDesc;
                    newDescDiv.setAttribute('title', productData.description);
                    descriptionCell.parentElement.replaceChild(newDescDiv, descriptionCell);
                }
                console.log('‚úÖ Updated description');
            }

            // Update table cells based on available data
            const cells = productRow.querySelectorAll('td');
            
            // Column 1: ID (already set, no need to update)
            
            // Column 2: Name (already updated above)
            
            // Column 3: API Link (if present)
            if (productData.apiLink && cells[2]) {
                const apiCell = cells[2];
                if (productData.apiLink) {
                    apiCell.innerHTML = `<a href="${productData.apiLink}" target="_blank" class="api-link" title="Open API Link">
                        <i class="fas fa-external-link-alt me-1"></i>
                        ${productData.apiLink.length > 30 ? productData.apiLink.substring(0, 30) + "..." : productData.apiLink}
                    </a>`;
                }
            }
            
            // Column 4: Description (already updated above)
            
            // Column 5: Created At (no need to update)

            // Add visual feedback to show the row was updated
            productRow.style.transition = 'all 0.3s ease';
            productRow.style.backgroundColor = '#d4edda'; // Light green
            productRow.style.transform = 'scale(1.01)';
            
            // Add a "Updated!" badge temporarily
            const nameContainer = productRow.querySelector('.product-name').parentElement;
            const existingBadge = nameContainer.querySelector('.update-badge');
            if (existingBadge) {
                existingBadge.remove();
            }
            
            const updateBadge = document.createElement('span');
            updateBadge.className = 'badge bg-success ms-2 update-badge animate__animated animate__pulse';
            updateBadge.innerHTML = '<i class="fas fa-check"></i> Updated!';
            nameContainer.appendChild(updateBadge);
            
            // Reset visual feedback after animation
            setTimeout(() => {
                productRow.style.backgroundColor = '';
                productRow.style.transform = '';
                if (updateBadge && updateBadge.parentElement) {
                    updateBadge.remove();
                }
            }, 3000);

            // Update edit button data attributes
            const editBtn = productRow.querySelector('.js-edit-btn');
            if (editBtn && productData.name) {
                editBtn.setAttribute('data-product-name', productData.name);
                // Update other attributes if available
                if (productData.id) editBtn.setAttribute('data-product-id', productData.id);
                console.log('‚úÖ Updated edit button attributes');
            }

            // Update delete button data attributes  
            const deleteBtn = productRow.querySelector('.js-delete-btn');
            if (deleteBtn && productData.name) {
                deleteBtn.setAttribute('data-product-name', productData.name);
                if (productData.id) deleteBtn.setAttribute('data-product-id', productData.id);
                console.log('‚úÖ Updated delete button attributes');
            }

            console.log(`üéâ Successfully updated product ${productData.id} in table`);
            
            // Show a brief success notification
            if (typeof Modal !== 'undefined' && Modal.showSuccess) {
                Modal.showSuccess(
                    'Table Updated!',
                    `Product "${productData.name}" has been updated in the table. Changes are now visible immediately!`,
                    null,
                    2000 // Auto-close after 2 seconds
                );
            }
            
        } catch (error) {
            console.error('‚ùå Error updating product in table:', error);
            
            if (typeof Modal !== 'undefined' && Modal.showError) {
                Modal.showError(
                    'Update Display Error',
                    'The product was saved successfully, but there was an issue updating the table display. The page will refresh to show the changes.'
                );
            }
            
            // Fallback: refresh page after a delay if table update fails
            setTimeout(() => {
                console.log('Refreshing page due to table update error...');
                window.location.reload();
            }, 2000);
        }
    }
});
</script>
