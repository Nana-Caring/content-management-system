    <script>
        function showPortalLoginModal() {
            const modal = new bootstrap.Modal(document.getElementById('portalLoginModal'));
            modal.show();
        }
        document.addEventListener('DOMContentLoaded', function() {
            // Portal link click handler to show login modal
            const portalLinks = document.querySelectorAll('.user-portal-link, .go-to-portal-btn');
            portalLinks.forEach(function(link) {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    showPortalLoginModal();
                });
            });
            // Handle login form submit: POST to /api/portal/admin-login
            const loginForm = document.getElementById('portalLoginForm');
            if (loginForm) {
                loginForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    const username = document.getElementById('portalUsername').value;
                    const password = document.getElementById('portalPassword').value;
                    const apiBaseUrl = 'https://nanacaring-backend.onrender.com';
                    // Send only username and password fields
                    fetch(apiBaseUrl + '/api/portal/admin-login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ username: username, password: password })
                    })
                    .then(async res => {
                        let data, rawText;
                        try {
                            rawText = await res.text();
                            data = JSON.parse(rawText);
                        } catch {
                            data = {};
                        }
                        if (res.ok && data && data.token) {
                            // Store portal-admin token in localStorage
                            localStorage.setItem('portal-admin-token', data.token);
                            // Close modal
                            bootstrap.Modal.getInstance(document.getElementById('portalLoginModal')).hide();
                            // Redirect to Portal page
                            window.location.href = '/Portal/Index';
                        } else {
                            let errorMsg = 'Login failed.';
                            errorMsg += '\nStatus: ' + res.status + ' ' + res.statusText;
                            errorMsg += '\nResponse: ' + rawText;
                            alert(errorMsg);
                        }
                    })
                    .catch(err => {
                        alert('Login failed. Please try again. Error: ' + err);
                    });
                });
            }
        });
    </script>

