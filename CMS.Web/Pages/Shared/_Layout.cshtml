<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMS.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <!-- LoaderComponent global includes -->
    @await Html.PartialAsync("_LoaderComponentIncludes")
    @await Html.PartialAsync("~/Pages/Shared/LoaderComponent.cshtml")
    
    @{
        var appState = ViewData["AppState"] as CMS.Web.Models.State.AppState;
        var isLoggedIn = appState?.IsLoggedIn == true;
        
        // Check if we're on the user details page to hide the header
        var currentPath = ViewContext.HttpContext.Request.Path.Value;
        var hideHeader = currentPath?.StartsWith("/Users/Details") == true;
        var isHighCourt = string.Equals(appState?.UserInfo?.Role, "highcourt", StringComparison.OrdinalIgnoreCase);

        var path = currentPath?.ToLowerInvariant() ?? string.Empty;
        var dashActive = path == "/" || path.StartsWith("/index");
        var usersActive = path.StartsWith("/users");
        var productsActive = path.StartsWith("/products");
        var kycActive = path.StartsWith("/kyc");
        var registerActive = path.StartsWith("/register");
    }

    @if (isLoggedIn)
    {
        <!-- Mobile sidebar toggle button -->
        <button class="sidebar-toggle" onclick="toggleSidebar()" title="Toggle Menu">
            <i class="bi bi-list"></i>
        </button>

        <!-- Fixed Sidebar for authenticated users -->
        <nav class="cms-sidebar position-fixed top-0 start-0" id="mainSidebar">
            <div class="cms-sidebar-inner d-flex flex-column h-100">
                <!-- Brand / Logo -->
                <div class="cms-brand text-center">
                    <img src="~/images/logo.png" alt="Nana Caring Logo" class="cms-brand-logo rounded-circle" />
                    <div class="cms-brand-name fw-bold">NANA CARING</div>
                </div>

                <!-- User card (hidden for High Court role as requested) -->
                @if (!isHighCourt)
                {
                    <div class="cms-user card border-0">
                        <div class="card-body d-flex align-items-center p-3">
                            <div class="cms-user-avatar me-3">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <div class="cms-user-info">
                                <div class="cms-user-email fw-semibold">@(appState?.UserInfo?.Email ?? "Admin")</div>
                                <small class="cms-user-role">@(appState?.UserInfo?.Role ?? "Administrator")</small>
                            </div>
                        </div>
                    </div>
                }

                <!-- Navigation -->
                <div class="cms-nav mt-3">
                    <div class="cms-section text-uppercase">Core</div>
                    <a asp-page="/Index" class="cms-nav-link@(dashActive ? " active" : string.Empty)">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>
                    <a asp-page="/Users/Index" class="cms-nav-link@(usersActive ? " active" : string.Empty)">
                        <i class="bi bi-people"></i>
                        <span>Users</span>
                    </a>
                    <a href="#" class="cms-nav-link portal-link" onclick="showLoginModal(); return false;">
                        <i class="bi bi-door-open"></i>
                        <span>Portal</span>
                    </a>

                    @if (isHighCourt)
                    {
                        <div class="cms-section text-uppercase mt-3">Management</div>
                        <a asp-page="/Register/Index" class="cms-nav-link@(registerActive ? " active" : string.Empty)">
                            <i class="bi bi-person-plus"></i>
                            <span>Register</span>
                        </a>
                    }
                    else
                    {
                        <div class="cms-section text-uppercase mt-3">Management</div>
                        <a asp-page="/Products/Index" class="cms-nav-link@(productsActive ? " active" : string.Empty)">
                            <i class="bi bi-box-seam"></i>
                            <span>Products</span>
                        </a>
                        <a asp-page="/KYC/Index" class="cms-nav-link@(kycActive ? " active" : string.Empty)">
                            <i class="bi bi-shield-check"></i>
                            <span>KYC Verification</span>
                        </a>
                    }
                </div>

                <div class="mt-auto small text-center cms-footer-note">
                    <span>Â© @DateTime.Now.Year Nana Caring</span>
                </div>
            </div>
    </nav>

        <!-- Portal Sidebar (Hidden by default, shown when portal is logged in) -->
        <nav class="sidebar position-fixed top-0 start-0" id="portalSidebar" style="width: 280px; height: 100vh; overflow-y: auto; z-index: 1000; background: linear-gradient(135deg, #f84c7d 0%, #ff447b 100%); color: #fff; display: none;">
            <div class="d-flex flex-column h-100 px-3 pt-4 pb-3">
                <!-- Portal Brand -->
                <div class="text-center mb-4 pb-2">
                    <h4 class="fw-bold" style="color: #fff; font-size:1.4rem; letter-spacing:1px;">
                        <i class="bi bi-grid-3x3-gap-fill me-2"></i>
                        Nana Caring
                    </h4>
                    <small style="color: rgba(255,255,255,0.8);">Portal Dashboard</small>
                </div>
                
                <!-- Portal Navigation -->
                <nav class="nav flex-column gap-2 mt-2 mb-3">
                    <button class="nav-link active d-flex align-items-center px-3 py-3 rounded border-0 w-100 portal-nav-btn" onclick="showPortalSection('dashboard')" style="background: rgba(255,255,255,0.2); color: #fff; font-weight:600; font-size:1.08rem;">
                        <i class="bi bi-speedometer2 me-3" style="font-size:1.3rem;"></i> Dashboard
                    </button>
                    <button class="nav-link d-flex align-items-center px-3 py-3 rounded border-0 w-100 portal-nav-btn" onclick="showPortalSection('profile')" style="background: transparent; color: rgba(255,255,255,0.9); font-weight:600; font-size:1.08rem;">
                        <i class="bi bi-person-circle me-3" style="font-size:1.3rem;"></i> My Profile
                    </button>
                    <button class="nav-link d-flex align-items-center px-3 py-3 rounded border-0 w-100 portal-nav-btn" onclick="showPortalSection('accounts')" style="background: transparent; color: rgba(255,255,255,0.9); font-weight:600; font-size:1.08rem;">
                        <i class="bi bi-credit-card-2-front me-3" style="font-size:1.3rem;"></i> My Accounts
                    </button>
                    <button class="nav-link d-flex align-items-center px-3 py-3 rounded border-0 w-100 portal-nav-btn" onclick="showPortalSection('transactions')" style="background: transparent; color: rgba(255,255,255,0.9); font-weight:600; font-size:1.08rem;">
                        <i class="bi bi-arrow-left-right me-3" style="font-size:1.3rem;"></i> My Transactions
                    </button>
                    <button class="nav-link d-flex align-items-center px-3 py-3 rounded border-0 w-100 portal-nav-btn" onclick="showPortalSection('beneficiaries')" style="background: transparent; color: rgba(255,255,255,0.9); font-weight:600; font-size:1.08rem;">
                        <i class="bi bi-people-fill me-3" style="font-size:1.3rem;"></i> Beneficiaries
                    </button>
                </nav>
                
                <!-- Portal User Profile -->
                <div class="mt-auto">
                    <div class="p-3 rounded" style="background: rgba(255,255,255,0.15); color: #fff;">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-person-circle me-3" style="font-size: 2.2rem;"></i>
                            <div>
                                <div class="fw-bold" style="font-size:1.05rem;" id="portalUserName">Portal User</div>
                                <small style="color: rgba(255,255,255,0.8); font-size:0.95rem;">Portal Access</small>
                            </div>
                        </div>
                    </div>
                    <!-- Logout from Portal -->
                    <button class="btn btn-outline-light btn-sm w-100 mt-2" onclick="logoutFromPortal()">
                        <i class="bi bi-box-arrow-right me-2"></i>Exit Portal
                    </button>
                </div>
            </div>
        </nav>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" data-bs-backdrop="false">
        <div class="modal-content">
          <div class="modal-header d-flex flex-column align-items-start" style="background: linear-gradient(135deg, #f84c7d 0%, #ff447b 100%); color: #fff; border-top-left-radius: 16px; border-top-right-radius: 16px;">
            <h5 class="modal-title fw-bold mb-1" id="loginModalLabel"><i class="bi bi-door-open me-2"></i> Admin Login</h5>
            <small class="mb-2" style="color: #fff; font-size: 1rem; font-weight: 500;">
              Please authenticate to access confidential user data and sensitive information. This area is restricted to authorized personnel only. Your credentials will be securely verified.
            </small>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
          </div>
          <div class="modal-body p-4" style="background: #fff; border-bottom-left-radius: 16px; border-bottom-right-radius: 16px; box-shadow: 0 4px 24px rgba(248,76,125,0.10);">
            <form id="loginForm" autocomplete="off">
              <div class="mb-4">
                <label for="username" class="form-label fw-semibold" style="color:#008000;">Username</label>
                <input type="text" class="form-control form-control-lg rounded-3 border border-2 border-success" id="username" name="username" placeholder="Enter your username" />
              </div>
              <div class="mb-4">
                <label for="password" class="form-label fw-semibold" style="color:#008000;">Password</label>
                <input type="text" class="form-control form-control-lg rounded-3 border border-2 border-success" id="password" name="password" placeholder="Enter password" />
              </div>
              <div class="mb-3 text-center">
                <span class="text-muted" style="font-size:0.95rem;">
                  By logging in, you agree to maintain the confidentiality of all user data accessed through this system.
                </span>
              </div>
              

              <button type="submit" class="btn w-100 py-2 fw-bold" style="background:#f84c7d; color:#fff; font-size:1.1rem; border-radius:8px; box-shadow: 0 2px 8px rgba(248,76,125,0.10);">Login &amp; Access System</button>
            </form>
          </div>
        </div>
      </div>
    </div>
        
        @if (!hideHeader)
        {
            <!-- Fixed top header/navbar for authenticated users - spans full remaining width -->
            <header class="position-sticky top-0" style="margin-left: 280px; z-index: 999; background: #fff; border-bottom: 2px solid #008000; box-shadow: 0 2px 4px rgba(0,128,0,0.08);">
                <div class="container-fluid px-4 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0" id="page-breadcrumb">
                                <!-- Breadcrumb items will be injected by JS -->
                            </ol>
                        </nav>
                        <div class="d-flex align-items-center">
                            <span class="text-muted small me-3">
                                <i class="bi bi-clock me-1"></i>
                                @DateTime.Now.ToString("MMM dd, yyyy HH:mm")
                            </span>
                            <!-- User profile dropdown trigger -->
                            <div class="user-dropdown position-relative">
                                <button class="btn btn-sm" type="button" id="userDropdownBtn" style="background: #008000; color: #fff; border: none;">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @(appState?.UserInfo?.Email ?? "Admin")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        }
        
        <!-- Custom sliding dropdown panel - positioned outside header -->
        <div class="user-dropdown-menu" id="userDropdownMenu">
            <div class="dropdown-header">
                <div class="text-center mb-3">
                    <i class="bi bi-person-circle display-6 text-primary"></i>
                    <div class="fw-bold">@(appState?.UserInfo?.Email ?? "Admin")</div>
                    <small class="text-muted">@(appState?.UserInfo?.Role ?? "Administrator")</small>
                </div>
            </div>
            <div class="dropdown-body">
                <a href="/Profile" class="dropdown-item">
                    <i class="bi bi-person me-2"></i>View Profile
                </a>
                <a href="/Settings" class="dropdown-item">
                    <i class="bi bi-gear me-2"></i>Settings
                </a>
                <a href="/Notifications" class="dropdown-item">
                    <i class="bi bi-bell me-2"></i>Notifications
                </a>
                <div class="dropdown-divider"></div>
                <a asp-page="/Logout" class="dropdown-item text-danger">
                    <i class="bi bi-box-arrow-right me-2"></i>Sign Out
                </a>
            </div>
        </div>
        
        <!-- Main content area with left margin for sidebar -->
    <div class="main-content" style="margin-left: 280px; min-height: calc(100vh - 80px); background: #fff; display: flex; flex-direction: column;">
            <!-- Dynamic Page content - This is where navigation content will be rendered -->
            <main class="content-container" style="flex: 1 0 auto;">
                <div class="container-fluid px-4 py-4">
                    <!-- Default CMS Content -->
                    <div id="cmsContent">
                        @RenderBody()
                    </div>
                    
                    <!-- Portal Content (Hidden by default) -->
                    <div id="portalContent" style="display: none;">
                        <!-- Portal Dashboard Section -->
                        <div id="portal-dashboard" class="portal-section" style="display: block;">
                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h1 class="h3 mb-0 text-gray-800">Portal Dashboard</h1>
                                            <p class="mb-0">Welcome to your personal portal dashboard.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row mb-4">
                                <div class="col-md-3">
                                    <div class="card shadow h-100">
                                        <div class="card-body text-center">
                                            <div class="text-primary">
                                                <i class="bi bi-wallet2 fa-2x"></i>
                                            </div>
                                            <div class="mt-2">
                                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Account Balance</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="accountBalance">R0.00</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-3">
                                    <div class="card shadow h-100">
                                        <div class="card-body text-center">
                                            <div class="text-success">
                                                <i class="bi bi-arrow-left-right fa-2x"></i>
                                            </div>
                                            <div class="mt-2">
                                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Transactions</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalTransactions">0</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-3">
                                    <div class="card shadow h-100">
                                        <div class="card-body text-center">
                                            <div class="text-info">
                                                <i class="bi bi-people fa-2x"></i>
                                            </div>
                                            <div class="mt-2">
                                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Beneficiaries</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalBeneficiaries">0</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-3">
                                    <div class="card shadow h-100">
                                        <div class="card-body text-center">
                                            <div class="text-warning">
                                                <i class="bi bi-credit-card fa-2x"></i>
                                            </div>
                                            <div class="mt-2">
                                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Active Accounts</div>
                                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="activeAccounts">0</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12">
                                    <div class="card shadow">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Recent Activity</h6>
                                        </div>
                                        <div class="card-body">
                                            <div id="recentActivity">
                                                <div class="text-center">
                                                    <div class="spinner-border text-primary" role="status">
                                                        <span class="visually-hidden">Loading...</span>
                                                    </div>
                                                    <p class="mt-2">Loading recent activity...</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Portal Profile Section -->
                        <div id="portal-profile" class="portal-section" style="display: none;">
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h1 class="h3 mb-0 text-gray-800">My Profile</h1>
                                    <p class="mb-0 section-description">Manage your personal information, contact details, and addresses.</p>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-lg-8">
                                    <!-- Personal Information Card -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                            <h6 class="m-0 font-weight-bold text-primary">Personal Information</h6>
                                            <button type="button" class="btn btn-primary btn-sm" id="editBtn" onclick="toggleEditMode()">
                                                <i class="bi bi-pencil me-1"></i>Edit Profile
                                            </button>
                                        </div>
                                        <div class="card-body">
                                            <form id="profileForm">
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-semibold">First Name</label>
                                                        <input type="text" class="form-control" id="firstName" name="firstName" readonly>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-semibold">Middle Name</label>
                                                        <input type="text" class="form-control" id="middleName" name="middleName" readonly>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-semibold">Last Name</label>
                                                        <input type="text" class="form-control" id="surname" name="surname" readonly>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label fw-semibold">Email Address</label>
                                                        <input type="email" class="form-control" id="email" name="email" readonly>
                                                    </div>
                                                </div>
                                                <div class="mb-4">
                                                    <label class="form-label fw-semibold">Phone Number</label>
                                                    <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" readonly>
                                                </div>
                                                
                                                <div class="mt-4" id="actionButtons" style="display: none;">
                                                    <button type="button" class="btn btn-success me-2" onclick="saveProfile()">
                                                        <i class="bi bi-check-lg me-1"></i>Save Changes
                                                    </button>
                                                    <button type="button" class="btn btn-secondary" onclick="cancelEdit()">
                                                        <i class="bi bi-x-lg me-1"></i>Cancel
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    
                                    <!-- Address Information Card -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Address Information</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <h6 class="text-muted mb-3"><i class="bi bi-mailbox me-2"></i>Postal Address</h6>
                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">Address Line 1</label>
                                                        <input type="text" class="form-control" id="postalAddressLine1" name="postalAddressLine1" readonly>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">Address Line 2</label>
                                                        <input type="text" class="form-control" id="postalAddressLine2" name="postalAddressLine2" readonly>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label fw-semibold">City</label>
                                                            <input type="text" class="form-control" id="postalCity" name="postalCity" readonly>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label fw-semibold">Province</label>
                                                            <input type="text" class="form-control" id="postalProvince" name="postalProvince" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">Postal Code</label>
                                                        <input type="text" class="form-control" id="postalCode" name="postalCode" readonly>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-lg-6">
                                                    <h6 class="text-muted mb-3"><i class="bi bi-house me-2"></i>Home Address</h6>
                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">Address Line 1</label>
                                                        <input type="text" class="form-control" id="homeAddressLine1" name="homeAddressLine1" readonly>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">Address Line 2</label>
                                                        <input type="text" class="form-control" id="homeAddressLine2" name="homeAddressLine2" readonly>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label fw-semibold">City</label>
                                                            <input type="text" class="form-control" id="homeCity" name="homeCity" readonly>
                                                        </div>
                                                        <div class="col-md-6 mb-3">
                                                            <label class="form-label fw-semibold">Province</label>
                                                            <input type="text" class="form-control" id="homeProvince" name="homeProvince" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">Postal Code</label>
                                                        <input type="text" class="form-control" id="homeCode" name="homeCode" readonly>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-lg-4">
                                    <!-- Account Information Card -->
                                    <div class="card shadow mb-4">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Account Information</h6>
                                        </div>
                                        <div class="card-body text-center">
                                            <div class="portal-profile-avatar mx-auto mb-3" id="profileAvatar">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <h5 id="displayName" class="mb-1">Loading...</h5>
                                            <p class="text-muted mb-2" id="userRole">Loading...</p>
                                            <p class="text-muted"><small>Member since: <span id="memberSince">Loading...</span></small></p>
                                            
                                            <hr class="my-3">
                                            
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <div class="fw-bold text-primary" id="userAccountsCount">-</div>
                                                    <small class="text-muted">Accounts</small>
                                                </div>
