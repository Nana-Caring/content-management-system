@page
@model CMS.Web.Pages.Register.IndexModel
@{
    ViewData["Title"] = "Register User";
}



<!-- Hidden form for anti-forgery token -->
<form style="display: none;">
    @Html.AntiForgeryToken()
</form>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Register User</h1>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Register Funder or Caregiver</h6>
                </div>
                <div class="card-body">
                    <form method="post" id="registerForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <!-- User Type Selection -->
                            <div class="col-md-6 mb-3">
                                <label for="userType" class="form-label">User Type <span class="text-danger">*</span></label>
                                <select class="form-select" id="userType" name="UserType" asp-for="RegisterRequest.UserType" required>
                                    <option value="">Select User Type</option>
                                    <option value="funder">Funder</option>
                                    <option value="caregiver">Caregiver</option>
                                </select>
                                <span asp-validation-for="RegisterRequest.UserType" class="text-danger"></span>
                            </div>

                            <!-- First Name -->
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">First Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="firstName" name="FirstName" asp-for="RegisterRequest.FirstName" required>
                                <span asp-validation-for="RegisterRequest.FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Middle Name -->
                            <div class="col-md-6 mb-3">
                                <label for="middleName" class="form-label">Middle Name</label>
                                <input type="text" class="form-control" id="middleName" name="MiddleName" asp-for="RegisterRequest.MiddleName">
                                <span asp-validation-for="RegisterRequest.MiddleName" class="text-danger"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="lastName" name="LastName" asp-for="RegisterRequest.LastName" required>
                                <span asp-validation-for="RegisterRequest.LastName" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" class="form-control" id="email" name="Email" asp-for="RegisterRequest.Email" required>
                                <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
                            </div>
                            <!-- Password -->
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                                <input type="password" class="form-control" id="password" name="Password" asp-for="RegisterRequest.Password" required minlength="6" placeholder="At least 6 characters">
                                <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Phone -->
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="tel" class="form-control" id="phone" name="Phone" asp-for="RegisterRequest.Phone">
                                <span asp-validation-for="RegisterRequest.Phone" class="text-danger"></span>
                            </div>

                            <!-- Date of Birth -->
                            <div class="col-md-6 mb-3">
                                <label for="dateOfBirth" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="dateOfBirth" name="DateOfBirth" asp-for="RegisterRequest.DateOfBirth">
                                <span asp-validation-for="RegisterRequest.DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <!-- ID Number -->
                            <div class="col-md-6 mb-3">
                                <label for="idnumber" class="form-label">ID Number <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="idnumber" name="Idnumber" asp-for="RegisterRequest.Idnumber" required maxlength="13" pattern="^[0-9]{13}$" placeholder="13 digits">
                                <span asp-validation-for="RegisterRequest.Idnumber" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Home Address (optional) -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="homeAddressLine1" class="form-label">Home Address Line 1</label>
                                <input type="text" class="form-control" id="homeAddressLine1" asp-for="RegisterRequest.HomeAddressLine1">
                                <span asp-validation-for="RegisterRequest.HomeAddressLine1" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="homeAddressLine2" class="form-label">Home Address Line 2</label>
                                <input type="text" class="form-control" id="homeAddressLine2" asp-for="RegisterRequest.HomeAddressLine2">
                                <span asp-validation-for="RegisterRequest.HomeAddressLine2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="homeCity" class="form-label">Home City</label>
                                <input type="text" class="form-control" id="homeCity" asp-for="RegisterRequest.HomeCity">
                                <span asp-validation-for="RegisterRequest.HomeCity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="homeProvince" class="form-label">Home Province</label>
                                <input type="text" class="form-control" id="homeProvince" asp-for="RegisterRequest.HomeProvince">
                                <span asp-validation-for="RegisterRequest.HomeProvince" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="homeCode" class="form-label">Home Postal Code</label>
                                <input type="text" class="form-control" id="homeCode" asp-for="RegisterRequest.HomeCode">
                                <span asp-validation-for="RegisterRequest.HomeCode" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Postal Address (optional, often used for Funders) -->
                        <div class="row funder-only" style="display:none;">
                            <div class="col-md-6 mb-3">
                                <label for="postalAddressLine1" class="form-label">Postal Address Line 1</label>
                                <input type="text" class="form-control" id="postalAddressLine1" asp-for="RegisterRequest.PostalAddressLine1">
                                <span asp-validation-for="RegisterRequest.PostalAddressLine1" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="postalAddressLine2" class="form-label">Postal Address Line 2</label>
                                <input type="text" class="form-control" id="postalAddressLine2" asp-for="RegisterRequest.PostalAddressLine2">
                                <span asp-validation-for="RegisterRequest.PostalAddressLine2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row funder-only" style="display:none;">
                            <div class="col-md-4 mb-3">
                                <label for="postalCity" class="form-label">Postal City</label>
                                <input type="text" class="form-control" id="postalCity" asp-for="RegisterRequest.PostalCity">
                                <span asp-validation-for="RegisterRequest.PostalCity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="postalProvince" class="form-label">Postal Province</label>
                                <input type="text" class="form-control" id="postalProvince" asp-for="RegisterRequest.PostalProvince">
                                <span asp-validation-for="RegisterRequest.PostalProvince" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="postalCode" class="form-label">Postal Code</label>
                                <input type="text" class="form-control" id="postalCode" asp-for="RegisterRequest.PostalCode">
                                <span asp-validation-for="RegisterRequest.PostalCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary" id="registerBtn">
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                    Register User
                                </button>
                                <a asp-page="/Index" class="btn btn-secondary ms-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/register.js" asp-append-version="true"></script>
    <script>
        // Toggle funder-only fields based on user type
        document.addEventListener('DOMContentLoaded', function() {
            const userType = document.getElementById('userType');
            const funderOnlyRows = document.querySelectorAll('.funder-only');
            function updateVisibility() {
                const isFunder = (userType?.value || '').toLowerCase() === 'funder';
                funderOnlyRows.forEach(r => r.style.display = isFunder ? '' : 'none');
            }
            if (userType) {
                userType.addEventListener('change', updateVisibility);
                updateVisibility();
            }
        });
    </script>
}