@page
@model CMS.Web.Pages.Users.IndexModel

<h2 class="mb-4">Users</h2>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Users != null && Model.Users.Any())
    {
        foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center">No users found.</td>
        </tr>
    }
    </tbody>
</table>

<a asp-page="./Create" class="btn btn-primary mt-3">Create New User</a>
